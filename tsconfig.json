{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/spec/**/*"]
}
