{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "module": "esnext",
    "outDir": "out-tsc/lib",
    "paths": {
      "@integration/*": ["integration/app/*"],
      "@ngxs/store/operators": ["packages/store/operators/src"],
      "@ngxs/store/internals": ["packages/store/internals/src"],
      "@ngxs/*": ["packages/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["@ngxs/**", "integrations/**"]
}
