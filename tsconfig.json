{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "out-tsc/lib",
    "paths": {
      "@integration/*": ["integration/app/*"],
      "@integration/env/*": ["integration/environments/*"],
      "@ngxs/store/operators": ["packages/store/operators/src"],
      "@ngxs/store/internals": ["packages/store/internals/src"],
      "@ngxs/*": ["packages/*"]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "@ngxs/**",
    "integrations/**"
  ]
}
