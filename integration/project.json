{
  "name": "integration",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "integration/",
  "sourceRoot": "integration",
  "projectType": "application",
  "prefix": "app",
  "implicitDependencies": ["*-plugin", "store"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist-integration/",
        "index": "./integration/index.html",
        "main": "./integration/main.ts",
        "tsConfig": "./integration/tsconfig.app.json",
        "polyfills": "./integration/polyfills.ts",
        "assets": [
          {
            "glob": "favicon.ico",
            "input": "./integration",
            "output": "./"
          }
        ],
        "styles": ["./integration/styles.scss"],
        "vendorChunk": true,
        "extractLicenses": false,
        "buildOptimizer": false,
        "sourceMap": true,
        "optimization": false,
        "namedChunks": true
      },
      "configurations": {
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": true,
          "fileReplacements": [
            {
              "replace": "/integration/environments/environment.ts",
              "with": "/integration/environments/environment.prod.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["^build"]
    },
    "server": {
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "outputPath": "dist-integration-server",
        "main": "./integration/server.ts",
        "tsConfig": "./integration/tsconfig.server.json",
        "sourceMap": true,
        "optimization": false
      },
      "configurations": {
        "production": {
          "optimization": true,
          "outputHashing": "none",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "fileReplacements": [
            {
              "replace": "/integration/environments/environment.ts",
              "with": "/integration/environments/environment.prod.ts"
            }
          ]
        }
      },
      "defaultConfiguration": ""
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "browserTarget": "integration:build"
      },
      "configurations": {
        "production": {
          "browserTarget": "integration:build:production"
        },
        "hmr": {
          "hmr": true,
          "browserTarget": "integration:build:hmr"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "integration:build"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "integration/jest.config.js",
        "passWithNoTests": true
      },
      "dependsOn": ["^build"]
    }
  }
}
