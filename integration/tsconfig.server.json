{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ngxs/*": ["../@ngxs/*"],
      "@integration/*": ["./app/*"]
    },
    "target": "es2016",
    "module": "es2020",
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "files": ["main.server.ts", "server.ts"],
  "exclude": ["cypress"],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "entryModule": "app/app.server.module#AppServerModule"
  }
}
